            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Webhook-Secret",
            "value": "{{webhook_secret}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"entry\",\n  \"side\": \"long\",\n  \"symbol\": \"BYBIT:BTCUSDT.P\",\n  \"size_type\": \"percent\",\n  \"size\": 1.0,\n  \"tag\": \"SFP_SL\"\n}"
        },
        "url": {
          "raw": "{{webhook_url}}",
          "host": ["{{webhook_url}}"]
        },
        "description": "Test LONG entry with 1% position size"
